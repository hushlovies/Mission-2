<Window x:Class="GsbRapports.modifierVisiteursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GsbRapports"
        mc:Ignorable="d"
        Title="modifierVisiteursWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,50,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock x:Name="txtLibVisiteurs" Margin="50,0,0,0" />
                <ComboBox x:Name="cmbVisiteur" Width="100"/>
            </StackPanel>
            <TextBox x:Name="txtLibVisiteur" Width="316"
                     DataContext="{Binding SelectedItem, ElementName=cmbVisiteur}"
                     Text="{Binding libelle}" Tag="{Binding id}" Height="19" RenderTransformOrigin="0.487,-0.486"/>
           
        </StackPanel>
    </Grid>
</Window>

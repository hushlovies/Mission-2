<Window x:Class="GsbRapports.majFamilleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GsbRapports"
        mc:Ignorable="d"
        Title="Mise à jour des familles" Height="450" Width="800">
     <Grid>
        <StackPanel Margin="0,50,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock x:Name="txtLibFamilles" Margin="50,0,0,0" 
                           
                           />
                <ComboBox x:Name="cmbFamille" Width="100"/>


            </StackPanel>
            <TextBox x:Name="txtLibFamille" Width="316"
                     DataContext="{Binding SelectedItem, ElementName=cmbFamille}"
                     Text="{Binding libelle}" Tag="{Binding id}" Height="19" RenderTransformOrigin="0.487,-0.486"/>
            <Button x:Name="btnValider" Content="Valider" Width="100" Click="btnValider_Click"/>


        </StackPanel>
    </Grid>
</Window>

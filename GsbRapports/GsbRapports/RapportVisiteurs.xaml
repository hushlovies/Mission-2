<Window x:Class="GsbRapports.RapportVisiteurs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GsbRapports"
        mc:Ignorable="d"
        Title="RapportVisiteurs" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="lstDateUn" HorizontalAlignment="Left" Margin="53,109,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="lstDateDeux" HorizontalAlignment="Left" Margin="53,205,0,0" VerticalAlignment="Top" Width="120"/>

        <DataGrid x:Name="dtGrid" AutoGenerateColumns="False" 
                  Height="200" Margin="257,100,34,119"  AlternatingRowBackground = "LightBlue">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom"  
                                    Binding="{Binding id}" Foreground="#FFF17B7B"/>
                <DataGridTextColumn Header="Solde" 
                                    Binding="{Binding solde}"  />
                <DataGridTextColumn Header="Découvert autorisé" 
                                    Binding="{Binding decouvertAutorise}" />
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
